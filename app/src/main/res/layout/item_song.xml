<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?selectableItemBackground"
    android:padding="@dimen/listPadding">

    <ImageView
        android:id="@+id/songPic"
        android:layout_width="@dimen/listPic"
        android:layout_height="@dimen/listPic"
        tools:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/songTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/infoLeftMargin"
        android:textSize="@dimen/listTitleSize"
        app:layout_constraintBottom_toTopOf="@id/artistName"
        app:layout_constraintLeft_toRightOf="@id/songPic"
        app:layout_constraintTop_toTopOf="@id/songPic"
        tools:text="Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistName"
        app:layout_constraintLeft_toRightOf="@id/songPic"
        app:layout_constraintTop_toBottomOf="@id/songTitle"
        app:layout_constraintBottom_toBottomOf="@id/songPic"
        tools:text="Name"
        android:layout_marginLeft="@dimen/infoLeftMargin"
        android:textSize="@dimen/listNameSize" />


</androidx.constraintlayout.widget.ConstraintLayout>